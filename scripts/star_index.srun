#gzip -d ../star_index/Mus_musculus.GRCm39.dna.primary_assembly.fa.gz

cd ../star_index

STAR --runThreadN 16 \
--runMode genomeGenerate \
--genomeDir ./ \
--genomeFastaFiles Mus_musculus.GRCm39.dna.primary_assembly.fa \
--sjdbGTFfile Mus_musculus.GRCm39.103.gtf \
--sjdbOverhang 150
